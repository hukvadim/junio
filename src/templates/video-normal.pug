										.player__volume
											button.player__action
												+i('sound-off')
												+i('sound-on')
											.player__line
												.player__progress(style="width: 50%;")
									.player__actions
										button.player__action
											+i('settings-fill')
										button.player__action
											+i('play-window')
										button.player__action
											+i('full-screen')
