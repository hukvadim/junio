---
title: Your videos
---
extends layouts/_layout
block content
	.page
		+sidebar('', '', '', 'active')
		.page__wrapper
			+header
			.page__center
				.page__info.h5 Hi Dash, Welcome back
				.page__title.h2 Your Videos
				.upload.upload_empty
					.upload__row
						.upload__col
							.upload__wrap
								input.upload__input(type="file")
								.upload__info.h6 Drag files here to upload
								button.upload__btn.btn.btn_blue
									+i('upload')
									span.btn__text Or choose file
						.upload__col
							.upload__head
								.upload__text.mr-auto.color-gray Other ways to upload
								a.upload__link(href="#")
									+i('arrows')
							.upload__btns
								.upload__file
									input.upload__input(type="file")
									button.upload__btn.btn.btn_blue
										+i('upload')
										span.btn__text New Video
								button.upload__btn.btn.btn_purple-light(type="button")
									+i('dropbox')
									span.btn__text Dropbox
							.upload__line
								.upload__progress(style="width: 30%;")
									.upload__tooltip 30%
							.upload__note.caption-sm.color-gray Upgrade for up to 7TB with no weekly limits.
				.catalog
					.catalog__tags
						a.catalog__tag(href="#") All
						a.catalog__tag(href="#") Stream Videos
						a.catalog__tag(href="#") Videos
					.catalog__row
						.catalog__container
							.catalog__title.h6 You uploaded 16 videos
							.catalog__sorting
								.catalog__box
									label.checkbox
										input.checkbox__input(type="checkbox")
										span.checkbox__in
											span.checkbox__tick
									.field
										.field__wrap
											select.field__select
												option Date uploaded
												option New
												option Free
								.catalog__box
									.catalog__actions
										a.catalog__action(href="#")
											+i('box')
											| Move
										a.catalog__action(href="#")
											+i('box')
											| Delete
										a.catalog__action(href="#")
											+i('box')
											| Add to Playlist
									.catalog__view
										a.catalog__link(href="#")
											+i('view-list')
										a.catalog__link.active(href="#")
											+i('view-cell')
							.catalog__list
								+game('img/card-pic-1.png')
								+game('img/card-pic-2.png')
								+game('img/card-pic-3.png')
								+game('img/card-pic-4.png')
								+game('img/card-pic-5.png')
								+game('img/card-pic-6.png')
								+game('img/card-pic-1.png')
								+game('img/card-pic-2.png')
								+game('img/card-pic-3.png')
								+game('img/card-pic-4.png')
								+game('img/card-pic-5.png')
								+game('img/card-pic-6.png')
							.catalog__btns
								button.catalog__btn.btn.btn_gray Load More
						.catalog__sidebar
							.widget
								.widget__head
									.widget__title.h6 Your Playlist 
									a.widget__action(href="#")
										+i('plus-sm')
								.games.games_add
									+gamesItem('img/game-1.png', 'Call of Duty®', 'Shooting')
									+gamesItem('img/game-2.png', 'The Dota 2', 'eSport', 'active')
									+gamesItem('img/game-3.png', 'League of Legends®', 'Online Game')
									+gamesItem('img/game-4.png', 'Fortnite®', 'Shooting')
									+gamesItem('img/game-1.png', 'Call of Duty®', 'Shooting')
								button.widget__btn.btn.btn_gray.btn_wide Manage Your Playlist
							.widget
								.widget__head
									.widget__title.h6 Views this month
									a.widget__action(href="#")
										+i('arrow-up-right')
								.details.details_sm
									.details__container
										.details__flex
											.details__number.h1 483
											.details__chart.details__chart_activity
												div#chart-active-users
										.details__flex
											a.details__line(href="#")
												.details__preview
													img.details__pic(src="img/details-pic.png" alt="")
												.details__info.caption-sm Page views per minute
											.details__status
												.details__icon.bg-blue
													+i('arrow-down-fat')
												.details__percent.caption-sm.color-blue 6%
										.details__box
											.details__chart.details__chart_counter
												div#chart-users-counter
											button.details__remove
												+i('remove')
										.details__list
											.details__item
												.details__head
													.details__preview.bg-purple
														img.details__pic(src="img/folder.svg" alt="")
													.details__text.caption-sm.color-gray Viewers
												.details__counter.h4 98k
												.details__indicator
													.details__progress.bg-purple(style="width: 55%;")
											.details__item
												.details__head
													.details__preview.bg-pink
														img.details__pic(src="img/activity.svg" alt="")
													.details__text.caption-sm.color-gray Followers
												.details__counter.h4 1m
												.details__indicator
													.details__progress.bg-pink(style="width: 52%;")
											.details__item
												.details__head
													.details__preview.bg-blue
														img.details__pic(src="img/bag.svg" alt="")
													.details__text.caption-sm.color-gray Ads
												.details__counter.h4 27$
												.details__indicator
													.details__progress.bg-blue(style="width: 55%;")
											.details__item
												.details__head
													.details__preview.bg-orange
														img.details__pic(src="img/chat.svg" alt="")
													.details__text.caption-sm.color-gray Videos
												.details__counter.h4 16
												.details__indicator
													.details__progress.bg-orange(style="width: 68%;")

				