											.messenger__top
												.messenger__man Kevin Carpenter
												.messenger__time 1m
											.messenger__group
												+message('Great!')
								.messenger__foot
									input.messenger__input(type="text" placeholder="Send a message…")
									button.messenger__btn.btn.btn_purple Send
									button.messenger__smile
										+i('editor-smile')
				.author.author_full
					.author__row
						.author__col
							.author__details
								.ava.ava_online
									img.ava__pic(src="img/ava-1.png" alt="")
								.author__wrap
									.author__flex
										.author__box
											.author__man.h3.confirm Dylan Hodges
											.author__parameters
												.author__parameter.h6 536K followers
												.author__parameter.h6 120 videos
											.author__note A League of Legends player. For business inquiries contact: dylan@ui8.net
										.author__btns
											button.author__btn.btn.btn_purple Message
											button.author__btn.btn.btn_asphalt.btn_square
												+i('profile-check')
									.games
										+gamesItem('img/game-1.png', 'Call of Duty®', 'Shooting')
										+gamesItem('img/game-2.png', 'The Dota 2', 'eSport')
